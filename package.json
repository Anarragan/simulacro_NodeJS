{
  "name": "simulacro_nodejs",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch ./src/server.ts",
    "build": "tsc ",
    "start": "NODE_ENV=production node ./dist/server.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --runInBand src/__tests__/unit",
    "test:coverage": "NODE_ENV=development NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:integration": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --runInBand src/__tests__/integration --detectOpenHandles --forceExit",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down -v",
    "db:restart": "npm run db:down && npm run db:up"
  },

  "repository": {
    "type": "git",
    "url": "git+https://github.com/Anarragan/simulacro_NodeJS.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Anarragan/simulacro_NodeJS/issues"
  },
  "homepage": "https://github.com/Anarragan/simulacro_NodeJS#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "pg": "^8.16.3",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.0",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "dotenv-cli": "^10.0.0",
    "jest": "^30.2.0",
    "sequelize-auto": "^0.8.8",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
